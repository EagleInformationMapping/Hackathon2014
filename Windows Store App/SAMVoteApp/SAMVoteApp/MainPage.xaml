    <Hub x:Name="everything">
        <Hub.HeaderTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal" Margin="10,-10,0,-10">
                    <Image Source="Assets/SmallLogo.scale-100.png" Height="32" Width="32"></Image>
                    <TextBlock FontSize="30">County of Riverside Voter Information App. Text us @ 832-924-8472</TextBlock>
                </StackPanel>
            </DataTemplate>
       </Hub.HeaderTemplate>
        <Hub.Background>
            <ImageBrush ImageSource="Assets/marilyn2.png" Stretch="UniformToFill"></ImageBrush>
        </Hub.Background>
        <HubSection >
            <HubSection.HeaderTemplate>
                <DataTemplate>
                    <TextBlock FontSize="30">Voting Locations Wait Time</TextBlock>
                </DataTemplate>
            </HubSection.HeaderTemplate>
            
            <DataTemplate>
                <ScrollViewer HorizontalScrollMode="Disabled" ZoomMode="Disabled">                    
                    <telerik:RadCartesianChart Width="450" Height="700" x:Name="chart" Loaded="chart_Loaded" MaxWidth="450" >
                        <telerik:RadCartesianChart.HorizontalAxis>
                            <telerik:LinearAxis/>
                        </telerik:RadCartesianChart.HorizontalAxis>
                        <telerik:RadCartesianChart.VerticalAxis>
                            <telerik:CategoricalAxis FontSize="14" Foreground="White" Width="15"/>
                        </telerik:RadCartesianChart.VerticalAxis>
                        <telerik:RadCartesianChart.Behaviors>
                            <telerik:ChartSelectionBehavior DataPointSelectionMode="Single" />
                           
                        </telerik:RadCartesianChart.Behaviors>
                        
                        <telerik:BarSeries ItemsSource="{Binding}"  Height="16">
                            <telerik:BarSeries.ShowLabels>True</telerik:BarSeries.ShowLabels>
                            <telerik:BarSeries.AllowSelect>True</telerik:BarSeries.AllowSelect>
                           
                            <telerik:BarSeries.LabelDefinitions>
                                <telerik:ChartSeriesLabelDefinition HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <telerik:ChartSeriesLabelDefinition.Template>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                            <TextBlock Text="{Binding DataItem.WaitTime}" FontSize="14" Foreground="White"/>
                                                <TextBlock Text="ms." Foreground="White"></TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </telerik:ChartSeriesLabelDefinition.Template>
                                </telerik:ChartSeriesLabelDefinition>
                            </telerik:BarSeries.LabelDefinitions>
                           
                            <telerik:BarSeries.CategoryBinding>
                                <telerik:PropertyNameDataPointBinding PropertyName="Name"/>
                            </telerik:BarSeries.CategoryBinding>
                            <telerik:BarSeries.ValueBinding>
                                <telerik:PropertyNameDataPointBinding PropertyName="WaitTime"/>
                            </telerik:BarSeries.ValueBinding>
                        </telerik:BarSeries>
                    </telerik:RadCartesianChart>
                </ScrollViewer>
            </DataTemplate>
        </HubSection>
        <HubSection  Header="Map Information" Margin="0,-10,0,0">
            <HubSection.HeaderTemplate>
                <DataTemplate>
                    <TextBlock FontSize="30">Map Information</TextBlock>
                </DataTemplate>
            </HubSection.HeaderTemplate>
            <DataTemplate>
                <StackPanel Margin="5" >
                    <Grid Background="Brown" Width="800">
                        <TextBlock Text="Overview Map" Height="30" FontSize="18" Margin="2"></TextBlock>
